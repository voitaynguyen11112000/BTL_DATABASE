<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.trantrongnguyen.databasesystem.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="IP"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="20dp"
            android:background="#409ae4"
            android:scaleY="0.9"
            android:textColor="#ffffff"
            android:id="@+id/editIP"
            android:text="192.168.1.8"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="DatabaseName"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="20dp"
            android:background="#409ae4"
            android:scaleY="0.9"
            android:textColor="#ffffff"
            android:id="@+id/editDBName"
            android:text="master"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="User"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="20dp"
            android:background="#409ae4"
            android:scaleY="0.9"
            android:textColor="#ffffff"
            android:id="@+id/editUser"
            android:text="sa"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Password"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="20dp"
            android:background="#409ae4"
            android:scaleY="0.9"
            android:textColor="#ffffff"
            android:id="@+id/editPass"
            android:text="matkhaula123"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleX="0.4"
        android:text="Connection"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/btnConnection"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Wait to connect"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/txtViewNofi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"></LinearLayout>

</LinearLayout>
